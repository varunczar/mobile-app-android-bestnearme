<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginBottom="@dimen/_20sdp"
>
    <ImageView
            android:id="@+id/image_hero"
            app:layout_collapseMode="parallax"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="@dimen/_160sdp" />
    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.6"
            android:background="@color/colorPrimaryDark"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="@+id/image_hero"
            app:layout_constraintBottom_toBottomOf="@+id/image_hero"
            app:layout_constraintLeft_toLeftOf="@+id/image_hero"
            app:layout_constraintRight_toRightOf="@+id/image_hero"
    />

    <TextView
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            style="@style/Text.XXXXXLarge.White"
            android:id="@+id/text_view_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text=""
            android:ellipsize="end"
            app:layout_constraintRight_toLeftOf="@+id/text_view_rating"
            app:layout_constraintBottom_toTopOf="@id/text_view_place_address"
            app:layout_constraintHorizontal_weight="1"
    />

    <TextView
            style="@style/Subtitle.XLarge.White"
            android:layout_marginBottom="@dimen/_4sdp"
            android:id="@+id/text_view_place_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintHorizontal_bias="1.0"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            app:layout_constraintLeft_toLeftOf="@+id/text_view_place_name"
            app:layout_constraintRight_toLeftOf="@+id/text_view_rating"
            app:layout_constraintBottom_toTopOf="@id/text_view_open_close"
            app:layout_constraintHorizontal_weight="1"
    />
    <TextView
            style="@style/Text.XXXLarge.Pastel"
            android:layout_marginBottom="@dimen/_4sdp"
            android:id="@+id/text_view_open_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintHorizontal_bias="1.0"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/text_view_place_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_phone"
            app:layout_constraintHorizontal_weight="1"
    />

    <Button
            style="@style/Text.XXLarge.White"
            android:layout_marginBottom="@dimen/_16sdp"
            android:id="@+id/text_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/text_view_place_name"
            app:layout_constraintBottom_toBottomOf="@id/image_hero"
            app:layout_constraintHorizontal_weight="1"
    />

    <TextView
            style="@style/Text.Large.Light"
            android:layout_marginTop="@dimen/_16sdp"
            android:id="@+id/text_view_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/text_view_place_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_hero"
            app:layout_constraintHorizontal_weight="1"
    />

    <TextView
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            style="@style/RatingLarge"
            android:id="@+id/text_view_rating"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="4.3"
    />


</androidx.constraintlayout.widget.ConstraintLayout>