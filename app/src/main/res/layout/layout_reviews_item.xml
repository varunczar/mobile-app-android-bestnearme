<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="@dimen/_14sdp"
>

    <TextView
            style="@style/Text.XLarge.Italic"
            android:id="@+id/text_view_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/text_view_rating"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
    />

    <TextView
            android:layout_marginTop="@dimen/_4sdp"
            style="@style/Text.XLarge"
            android:id="@+id/text_view_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_review"
            app:layout_constraintHorizontal_weight="1"
    />

    <TextView
            style="@style/Subtitle.Large"
            android:layout_marginBottom="@dimen/_4sdp"
            android:id="@+id/text_view_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintHorizontal_bias="1.0"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="hhhh"
            app:layout_constraintLeft_toLeftOf="@+id/text_view_author"
            app:layout_constraintRight_toLeftOf="@+id/text_view_rating"
            app:layout_constraintTop_toBottomOf="@+id/text_view_author"
            app:layout_constraintHorizontal_weight="1"
    />

    <TextView
            style="@style/Rating"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:id="@+id/text_view_rating"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_author"
            android:text="4.3"
    />


</androidx.constraintlayout.widget.ConstraintLayout>