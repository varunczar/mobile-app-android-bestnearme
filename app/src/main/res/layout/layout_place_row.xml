<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:paddingLeft="@dimen/_12sdp"
                                                       android:paddingTop="@dimen/_12sdp"
                                                       android:paddingRight="@dimen/_12sdp"
    >

        <ImageView
                android:id="@+id/image_view_place"
                android:layout_width="@dimen/height_image_hero"
                android:layout_height="@dimen/height_image_hero"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/latte"
                android:paddingBottom="@dimen/_12sdp"
        />

        <TextView
                style="@style/Text.XXXLarge"
                android:id="@+id/text_view_place_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="false"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/image_view_place"
                android:layout_marginLeft="@dimen/cell_padding_double"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_place_name"
                app:layout_constraintHorizontal_weight="1"
        />

        <TextView
                style="@style/Subtitle.Large"
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/text_view_place_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="false"
                app:layout_constraintHorizontal_bias="1.0"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintLeft_toLeftOf="@+id/text_view_place_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_place_name"
                app:layout_constraintHorizontal_weight="1"
        />
        <TextView
                style="@style/Text.XXLarge"
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/text_view_open_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="false"
                app:layout_constraintHorizontal_bias="1.0"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintLeft_toLeftOf="@+id/text_view_place_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_place_address"
                app:layout_constraintHorizontal_weight="1"
        />

        <TextView
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                style="@style/Rating"
                android:id="@+id/text_view_rating"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="false"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="4.3"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>