<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:ambientShadowAlpha">0.09</item>
        <item name="android:spotShadowAlpha">0.06</item>
    </style>
    <style name="Logo">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/tahu</item>
        <item name="android:textSize">@dimen/text_size_logo</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="Title">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>
    <style name="Title.Large">
        <item name="android:textSize">@dimen/text_size_title_large</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Text.XLarge">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>
    <style name="Text.XXLarge">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
    </style>
    <style name="Text.XXXLarge">
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
    </style>

    <style name="Title.XLarge">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_title_xlarge</item>
    </style>
    <style name="Title.XXLarge">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_title_xxlarge</item>
    </style>
    <style name="Title.XLarge.V2">
    </style>
    <style name="Title.XLarge.V2.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="Title.XLarge.V2.White.V2">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Title.LargeRegular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_title_large</item>
    </style>
    <style name="Subtitle">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="Subtitle.Large">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>
